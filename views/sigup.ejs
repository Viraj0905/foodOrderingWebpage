<div class="formBlock">
<div class="signin" style="height:75vh;margin-top:10vh">
<!-- method="POST" action="/register" -->
  <form class="reg-form" method="POST" action="/register">
    <h1>Registor Form</h1>
    <p id="msg">Password does't match </p>

    <div class="reg-form1">
      <label for="fname" class="label1">First Name</label>
      <input class="input1" type="text" name="fname" placeholder="Enter your First Name">
    </div>

    <div class="reg-form1">
      <label for="" class="label1">Last Name</label>
      <input class="input1" type="text" name="lname" placeholder="Last Name ">
    </div>

    <div class="reg-form1">
      <label for="email" class="label1">Email address</label>
     <input class="input1" type="email" name="email"placeholder="Enter your email">
      <p>We'll never share your email with anyone else</p>
    </div>

    <div class="reg-form1">
      <label for="mobile" class="label1">Mobile Number</label>
      <input class="input1" type="tel" name="mobile" maxlength="10" placeholder="Enter your Mobile number">
      <p>We'll never share your mobile number with anyone else</p>
    </div>

    <div class="reg-form1">
      <label for="" class="label1">Password</label>
      <input class="input1" id="pass1" type="password" name="password" placeholder="Enter your password">
    </div>

    <div class="reg-form1">
      <label for="" class="label1">Repeat password</label>
      <input class="input1" id="pass2" type="password" name="re_password" placeholder="Re-enter your password" />
      <!-- <p><i class="fab fa-google"></i><i class="fab fa-facebook"></i></p> -->
    
    </div>

    <button class="btn" type="submit">Register</button>
    <button class="btn" onclick="window.location='/sigin'">Login</button>
  </form>

</div>
<div class="sideImg ">
  <h2><%=imgMsg%></h2>
  <img src="bglogo/bg12.webp" alt="foodloding">
  <h2>Contact Customer Support</h2>
  <p>if you'r looking for more help or have a question to ask,please</p>
</div>
</div>
  
